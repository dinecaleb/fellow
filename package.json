{
    "name": "memo-rable",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:ios": "vite --host",
        "dev:android": "vite --host",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "cap:sync": "npx cap sync",
        "cap:open:ios": "npx cap open ios",
        "cap:open:android": "npx cap open android",
        "cap:ios": "npm run build && npx cap sync ios && npx cap open ios",
        "cap:android": "npm run build && npx cap sync android && npx cap open android",
        "live:ios": "vite",
        "live:android": "vite",
        "ip": "node -e \"const os = require('os'); const ifaces = os.networkInterfaces(); const addrs = []; Object.keys(ifaces).forEach(iface => { ifaces[iface].forEach(addr => { if (addr.family === 'IPv4' && !addr.internal) addrs.push(addr.address); }); }); console.log(addrs[0] || 'localhost');\""
    },
    "dependencies": {
        "@capacitor-community/media": "^5.0.0",
        "@capacitor-community/native-audio": "^5.0.1",
        "@capacitor/app": "^5.0.6",
        "@capacitor/core": "^5.5.1",
        "@capacitor/filesystem": "^5.1.4",
        "@capacitor/preferences": "^5.0.6",
        "@capacitor/status-bar": "^5.0.6",
        "@ionic/react": "^8.7.9",
        "capacitor-voice-recorder": "^5.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.20.0"
    },
    "devDependencies": {
        "@capacitor/cli": "^5.5.1",
        "@capacitor/ios": "^5.7.8",
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/ui": "^0.34.6",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "jsdom": "^23.0.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.2.2",
        "vite": "^4.5.3",
        "vitest": "^0.34.6"
    }
}